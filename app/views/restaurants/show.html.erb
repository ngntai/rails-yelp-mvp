<div class="container">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <p class="card-text"><%= @restaurant.address %></p>
      <p class="card-text">Category: <%= @restaurant.category %></p>
      <p class="card-text"><%= @restaurant.phone_number %></p>

      <%=link_to "Modifier", edit_restaurant_path, class: "btn btn-outline-success mt-3" %>
      <%=link_to "Revenir", restaurants_path, class: "btn btn-outline-dark mt-3" %>


    </div>
  </div>
</div>
