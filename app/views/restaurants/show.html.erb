<div class="container">
  <div class="card w-75" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><strong><%= @restaurant.name %></strong></h5>
      <p class="card-text"><%= @restaurant.address %></p>
      <p class="card-text">Category: <%= @restaurant.category %></p>
      <p class="card-text"><%= @restaurant.phone_number %></p>

      <ul class="list-group"  style="list-style: none">
      <li class= "list-group-item list-group-item-warning"> Commentaires </li>
        <% @restaurant.reviews.each do |review| %>
          <li class= "list-group-item"> <em><%= review.rating %> Ã©toiles </em><br> <%= review.content%> </li>
        <% end %>
      </ul>

      <%=link_to "Ajouter un avis", new_restaurant_review_path(@restaurant), class: "btn btn-outline-success btn-lg btn-block mt-3" %>
      <%=link_to "Modifier", edit_restaurant_path, class: "btn btn-outline-info mt-3" %>
      <%=link_to "Revenir", restaurants_path, class: "btn btn-outline-dark mt-3" %>


    </div>
  </div>
</div>
